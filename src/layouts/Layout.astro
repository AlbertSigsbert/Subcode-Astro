---
import Header from "../components/Common/Header.astro";
import Footer from "../components/Common/Footer.astro";
import Head from "./Head.astro";

export interface Props {
  title: string;
  description:string;
  imagePath: string,
  robots?: any,
}

const { title, description, imagePath, robots } = Astro.props as Props;

---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <Head title={title}  description={description} imagePath={imagePath} {robots}/>
  <body class="font-inter bg-gradient-to-b from-gray-50 to-gray-200">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
