---
import {processes} from "../../data/data.astro";
---

<section class="mx-[6%] mt-[6%] mb-[10%]">
  <h1 class="my-8 font-semibold text-2xl md:text-5xl text-center capitalize pb-3">Our Workflow</h1>
  <ol class="p-10 bg-[#C4C4C426] shadow-md rounded-xl md:rounded-3xl items-center sm:flex">
    {
      processes.map((process) => (
        <li class="relative mb-6 sm:mb-0">
          <div class="flex items-center">
            <div class="z-10 flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 ring-white sm:ring-8 shrink-0">
              <span>{process.id}</span>
            </div>
            <div class="hidden sm:flex w-full bg-gray-200 h-0.5" />
          </div>
          <div class="mt-3 sm:pr-8">
            <h3 class="text-lg font-semibold text-gray-900">{process.name}</h3>
            <p class="text-sm font-normal text-gray-500 my-4">{process.intro}</p>
            <p class="text-sm font-normal text-gray-500">{process.content}</p>
          </div>
        </li>
      ))
    }
  </ol>
</section>
