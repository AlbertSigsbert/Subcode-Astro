---
export interface Props {
  title: string;
  subtitle: string;
  other?: string;
}

const { title, subtitle, other } = Astro.props as Props;
---

<div class="mx-[6%] text-center py-20 xl:h-[80vh] xl:grid place-items-center">
  <div class="w-full mx-auto max-w-3xl">
    <h1 class="font-bold text-2xl md:text-5xl text-center capitalize pb-3">
      {title}
    </h1>
    <p class="font-normal text-base md:text-lg text-center">
      {subtitle}
    </p>
    <p class="font-normal text-base md:text-lg text-center">
      {other}
    </p>
  </div>
</div>
